{
    "manifest_version": 3,
    "name": "ScamSense",
    "version": "1.0",
    "description": "AI-Powered Scam Detector for Gmail, Outlook, WhatsApp, and Telegram.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://mail.google.com/*",
        "https://outlook.live.com/*",
        "https://outlook.office.com/*",
        "https://web.whatsapp.com/*",
        "https://web.telegram.org/*",
        "http://127.0.0.1:8000/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://mail.google.com/*",
                "https://outlook.live.com/*",
                "https://outlook.office.com/*",
                "https://web.whatsapp.com/*",
                "https://web.telegram.org/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}